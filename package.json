{
  "name": "root",
  "private": true,
  "devDependencies": {
    "fs-extra": "^7.0.0",
    "lerna": "^3.4.3",
    "lerna-update-wizard": "^0.9.4",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "create-package": "node util/create-package.js",
    "create-index": "node util/create-package-index-file.js",
    "create-index-core": "node util/create-core-index-file.js",
    "create-index-modules": "node util/create-all-core-dependant-index-files.js",
    "create-index-all": "npm run create-index-core && npm run create-index-modules",
    "fix-typos": "node util/fix-definition-typos.js",
    "update-main": "node util/update-main-package-dependencies.js",
    "build": "npm run create-index-all && npm run update-main"
  }
}